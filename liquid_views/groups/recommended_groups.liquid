<div class="header">
  <h3>{{title}}</h3>
</div>
<div class="section">
  
  {% if groups == empty %}
    <p>
      <em>no groups available</em>
    </p>
  {% else %}
  
    <ol>
      {% for group in groups %}
      <li class="item hot">
        <a href="{{ group.show_path }}">{{ group.small_avatar }}</a>
        {{ group.link_to_show }}
        <p class="count">
          <var>{{ 'member' | pluralize: group.members_count }}</var>
        </p>
      </li>
      {% endfor %}
    </ol>
  
  {% endif %}
  
</div>

<div class="header">
  <h3>My {{ site.group_label | plural }}</h3>
</div>
<div class="section" id="sidebar_my_groups">
  
  {% if groups == empty %}
    <p>
      <em>No {{ site.group_label | plural | downcase }} available.</em>
    </p>
  {% else %}
  
    <ol>
      {% for group in groups %}
      <li class="item">
        <a href="{{ group.show_path }}">{{ group.small_avatar }}</a>
        <p class='title'>
          {{ group.link_to_show }}
          <br/>
          {{ 'member' | pluralize: group.members_count }}
        </p>
      </li>
      {% endfor %}
    </ol>
    {% if more_groups > 0%}
      <a href="/groups/my_groups" class="more_link">{{ more_groups }} more</a>
    {% endif %}
  
  {% endif %}
  
</div>

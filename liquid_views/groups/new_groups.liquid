<div class="header">
  <h3>New {{ site.group_label | plural }}</h3>
</div>
<div class="section">
  
  {% if groups == empty %}
    <p>
      <em>no new {{ site.group_label | plural | downcase }} available</em>
    </p>
  {% else %}
  
    <ol>
      {% for group in groups %}
      <li class="item">
        <a href="{{ group.show_path }}">{{ group.small_avatar }}</a>
        {{ group.link_to_show }}
        <p>{{ 'member' | pluralize: group.members_count }}</p>   
      </li>
      {% endfor %}
    </ol>
    {% if more_groups > 0 %}
      <a href="/groups?order=recently_created&limit=10" class="more_link">{{ more_groups }} more</a>
    {% endif %}
  
  {% endif %}
</div>

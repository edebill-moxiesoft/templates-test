<div class="header">
  <h3>My Articles</h3>
</div>
<div class="section">
  
  {% if articles == empty %}
    <p>
      <em>No {{ site.article_label | plural | downcase }} available</em>
    </p>
  {% else %}
  
    <ol>
      {% for article in articles %}
      <li class="item">
        {{ article.link_to_show }}
      </li>
      {% endfor %}
    </ol>
    {% if more_articles > 0%}
      <a href="/articles?order=my&limit=10" class="more_link">{{ more_articles }} more</a>
    {% endif %}
  
  {% endif %}
  
</div>

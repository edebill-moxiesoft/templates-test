{% input for 'title' label: 'Title' required: 'true' %}

<li class="text last" id="item_collection_item_finder">
  <label for="item_collection_item_search">Manually Add Items</label>
  <input id="item_collection_item_search" name="item_search" type="text" />
  <table class="item_references_table">
  {% for item in form_object.item_references %}
    <tr data-id="{{ item.id }}">
      <td>
        {{ item.title }}
        <input type="hidden" name="item_collection[item_reference_ids][]" value="{{ item.id }}" />
      </td>
      <td class='delete'><a href="#" class="js_delete_link">X</a></td>
    </tr>
  {% endfor %}
  </table>

</li>

{% unless form_object.parent_id == null %}
  {% input for 'parent_id' as: 'hidden' %}
{% endunless %}

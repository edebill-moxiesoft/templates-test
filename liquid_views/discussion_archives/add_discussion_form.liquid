<div id="discussion_post_form" class="post_form js_post_form">
  <div class='new_post'>
    <div class='post_form_toggler'>
      <div class='ind'></div>

			{% form for 'form_object' id: 'post_form' action: "discussion_archive.url_for_new_discussion" class: 'formtastic discussion' data-type: html  %}
				{% error_messages %}
				<div class="wrapper">
          <div class='form_inputs'>
		  		{% form_fields for 'inputs' %}
						{% input for 'title' label: 'Title' required: 'true' class: 'title' %}
						{% include 'nodes/_editor_fields' body_label: 'Description' %}
						<li>
              <label>Add Tags</label>
              {{ form_object.tagging_text_field }}
            </li>
					{% endform_fields %}
					{% form_fields for 'buttons' %}
						{% input as: submit value: "SUBMIT DISCUSSION" class: create  %}
						{% input as: button value: Cancel class: cancel %}
			    {% endform_fields %}
					</div>
				</div>
			{% endform %}
			
    </div>
  </div>
</div>
  
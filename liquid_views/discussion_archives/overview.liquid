  <div class='section groups header'>
    <div id="page_header" class="content_bar_hat">
      <div class='section main'>
          <h1>{{ site.discussion_archive_label | plural }}</h1>
      </div>
      <div class="section sidebar content_bar">
        <div class='menu popdown-menu'></div>
      </div>
      <div class='clear'></div>
    </div>
  </div>

  <div class='section main'>
    {% discussion_archives limit 10 %}
  </div>
  <div class='section sidebar'>
    <div class='aside my_discussion_archives'>
      {% my discussion_archives %}
    </div>
  </div>
</div>

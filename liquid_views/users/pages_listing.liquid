{% comment %} From menus/pages_listing.liquid.  Adds the activity page link. {% endcomment %}

<ol>    
  <li class="menu_item icon_menu_item {% if controller == 'users' and action == 'show' %}selected{% endif %}">
    <a href="{{ user.show_path }}" title="Profile" class="profile_menu_item">
      Profile
    </a>
  </li>
  <li class="menu_item icon_menu_item {% if action == 'activities' %}selected{% endif %}">
    <a href="{{ user.activities_path }}" title="{{site.newsfeed_label}}" class="activities_menu_item">
      {{site.newsfeed_label}}
    </a>
  </li>
  {% for section_label in section_labels %}
    {% include 'menus/pages_listing_item' node: node, container: user, pages: sections[section_label], section_title: section_label %}
  {% endfor %}
  
  {% if site.clients_section_enabled? %}
    <li class="menu_item icon_menu_item {% if action == 'works' %}selected{% endif %}">
      <a href="{{ user.works_url }}" class="work_portfolio_menu_item" title="{{ site.work_label | plural }}">{{ site.work_label | plural }}</a>
    </li>
  {% endif %}

  {% if user.current_user? %}
    <li class="menu_item icon_menu_item {% if controller == 'watchings' %}selected{% endif %}">
      <a href="/watchings" class="watchings_menu_item" title="Following List">Following List</a>
    </li>
  {% endif %}
</ol>

<div id="personal_blog_posts_index">
  <div class="content_bar_hat"></div>

  <div class='header'>
    <h1>{{order}} {{ site.blog_post_label | plural }}</h1>
  </div>

  <div class='section main js_filtered'>
    {% include 'blog_posts/list_block' blog_posts: blog_posts hide_more: true%}
    {% if more_blog_posts > 0 %}
    <div class='js_paginate'>
      <a class="more" href="/people/blog_posts?nolayout=true&limit=20" data-offset='{{offset}}' data-type='html' >More</a>
      <div class='spinner'></div>
    </div>
    {% endif %}
  </div>

  <div class='section sidebar'>

    <div class='aside my_blogs blogs'>
      {% my blogs %}
    </div>

    <div class='aside recent liked blog_posts'>
      {% show_recent_likes for blog_posts %}
    </div>

    <div class='aside  recent viewed blog_posts blogs'>
      <div class='header'>
        <h3>Recently Viewed</h3>
      </div>
      <div class="section">
        {% recently_viewed for blog_posts %}
      </div>
    </div>

  </div>

</div>


<ul class="section watched_users">
  {% for user in users %}
  <li class="user {% if forloop.last %}last{% endif %}">

    <a href="{{ user.show_path }}" class="face">{{ user.small_avatar }}</a>

    <p class="details">
      <a href="{{ user.show_path }}" class="user_link">{{ user.display_name }}</a>
    </p>

  </li>
  {% endfor %}
</ul>

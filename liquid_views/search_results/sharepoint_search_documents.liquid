{% assign items_shown = 5 %}

{% if hide_if_none != false and sharepoint_search_documents and sharepoint_search_documents != empty %}
<div class="section search_result unit sharepoint_documents">
  
  <div class="header">
    <h3>SharePoint Documents</h3>
  </div>
  
 {% include 'sharepoint_search_documents/search_results' limit: items_shown hide_more: true hide_total: true %}
 
 {% if has_more_sharepoint_search_documents %}
 <div class="footer">
     <a class="more_link" href="/sharepoint_search_documents/search?q={{ query | escape }}&{{ extra_params }}">
     <span class="more_count">{% if num_hits > 1005 %}
     over 1000
     {% elsif num_hits > 5 %}
     {{ num_hits| minus:items_shown  }}
     {% endif %}</span>
     more</a>
 </div>
 {% endif %}
 
</div>
{% endif %}
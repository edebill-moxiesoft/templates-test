{% assign items_shown = 5 %}

<div class="section search_result unit wiki_page">
  
  <div class="header">
    <h3 class="wiki_page">{{ site.wiki_page_label | plural }}</h3>
  </div>
  
  {% include 'wiki_pages/search_results' wikis: wiki_pages limit: items_shown  hide_more: true hide_total: true %}

  {% if has_more_wiki_pages %}
  <div class="footer">
      <a class="more_link" href="/wiki_pages/search?q={{ query | escape }}&{{ extra_params }}">
      <span class="more_count">{% if num_hits > 1005 %}
      over 1000
      {% elsif num_hits > 5 %}
      {{ num_hits| minus:items_shown  }}
      {% endif %}</span>
      more</a>
  </div>
  {% endif %}

</div>

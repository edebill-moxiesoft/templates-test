{% assign items_shown = 5 %}

<div class="section search_result unit document_libraries">
  
  <div class="header">
    <h3 class="document_libraries">{{ site.document_library_label | plural }}</h3>
  </div>
  
   {% include 'document_libraries/search_results' limit: items_shown  hide_more: true hide_total: true %}


  {% if has_more_document_libraries %}
  <div class="footer">
      <a class="more_link" href="/document_libraries/search?q={{ query | escape }}&{{ extra_params }}">
      <span class="more_count">{% if num_hits > 1005 %}
      over 1000
      {% elsif num_hits > 5 %}
      {{ num_hits| minus:items_shown  }}
      {% endif %}</span>
      more</a>
  </div>
  {% endif %}

</div>

{% assign items_shown = 5 %}

<div class="section search_result unit location_group">
  
  <div class="header">
    <h3 class="group">{{ site.location_group_label | plural }}</h3>
  </div>

  {% include 'groups/search_results' groups: location_groups limit: items_shown   hide_more: true hide_total: true %}

  {% if has_more_location_groups %}
  <div class="footer">
      <a class="more_link" href="/groups/location_groups/search?q={{ query | escape }}&{{ extra_params }}">
      <span class="more_count">{% if num_hits > 1005 %}
      over 1000
      {% elsif num_hits > 5 %}
      {{ num_hits| minus:items_shown  }}
      {% endif %}</span>
      more</a>
  </div>
  {% endif %}

</div>

{% assign items_shown = 5 %}

<div class="section search_result unit email">

  <div class="header">
    <h3 class="Document">{{ site.email_label | plural }}</h3>
  </div>

 {% include 'emails/search_results' limit: items_shown  hide_more: true hide_total: true %}

  {% if has_more_emails %}
  <div class="footer">
      <a class="more_link" href="/emails/search?q={{ query | escape }}&{{ extra_params }}">
      <span class="more_count">{% if num_hits > 1005 %}
      over 1000
      {% elsif num_hits > 5 %}
      {{ num_hits| minus:items_shown  }}
      {% endif %}</span>
      more</a>
  </div>
  {% endif %}

</div>

<div id="blog_posts_index">
  <div class="content_bar_hat"></div>

  <div class='header'>
    <h1 class="overview_title">{{order}} {{ site.blog_post_label | plural }}</h1>
  </div>
  <div class='section main js_filtered'>
    {% blog_posts limit 10 %}
  </div>
  <div class='section sidebar'>

    <div class='aside my_blogs blogs'>
      {% my blogs %}
    </div>

    <div class='aside recent liked blog_posts'>
      {% show_recent_likes for blog_posts %}
    </div>

    <div class='aside  recent viewed blog_posts blogs'>
      <div class='header'>
        <h3>Recently Viewed</h3>
      </div>
      <div class="section">
        {% recently_viewed for blog_posts %}
      </div>
    </div>

  </div>
</div>


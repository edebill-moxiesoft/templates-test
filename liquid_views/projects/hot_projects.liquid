<div class="header">
  <h3>Hot {{ site.project_label | plural }}</h3>
</div>
<div class="section">
  
  {% if projects == empty %}
    <p>
      <em>no {{ site.project_label | plural | downcase }} available</em>
    </p>
  {% else %}
  
    <ol>
      {% for project in projects %}
      <li class="item hot">
        <a href="{{ project.show_path }}">{{ project.small_avatar }}</a>
        {{ project.link_to_show_with_container_class }}
        <p class="count">
          <var>{{ 'member' | pluralize: project.members_count }}</var>
        </p>
      </li>
      {% endfor %}
    </ol>
    {% if more_projects > 0 %}
      <a href="/projects?order=hot" class="more_link">{{ more_projects }} more</a>
    {% endif %}
  
  {% endif %}
  
</div>

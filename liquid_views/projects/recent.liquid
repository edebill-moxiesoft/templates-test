<div class="header">
  <h3>New {{ site.project_label | plural }}</h3>
</div>
<div class="section">
  
  {% if projects == empty %}
    <p><em>No {{ site.project_label | plural | downcase }} available.</em></p>
  {% else %}
  
    <ol>
      {% for project in projects %}
      <li class="item recent">
        <a href="{{ project.show_path }}">{{ project.small_avatar }}</a>
        <p class='title'>
          {{ project.link_to_show_with_container_class }}     
        </p>
		{% join project %}
      </li>
      {% endfor %}
    </ol>
    {% if more_projects > 0%}
      <a href="/projects?order=recent" class="more_link">{{ more_projects }} more</a>
    {% endif %}
  
  {% endif %}
  
</div>

<div class="header">
  <h3>My {{ site.blog_label | plural }}</h3>
</div>
<div class="section">

  {% if blogs == empty %}
    <p>
      <em>no {{ site.blog_label | plural | downcase }} available</em>
    </p>
  {% else %}

    <ol>
      {% for blog in blogs %}
      <li class="item">
        <div class="idea_count"><var>{{ site.blog_post_label | downcase | pluralize: blog.blog_posts_count }}</var></div>
        <div class="idea">
          {{ blog.link_to_show_with_container_class }}
          <p class="updated">
            updated {{ blog.updated_at | time_ago_in_words, 'ago' }} 
          </p>
        </div>
      </li>
      {% endfor %}
    </ol>
    {% if more_blogs > 0%}
      <a href="/blogs/overview?order=my" class="more_link">{{ more_blogs }} more</a>
    {% endif %}

  {% endif %}

</div>
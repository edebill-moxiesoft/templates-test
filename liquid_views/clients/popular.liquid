<div class="header">
  <h3>Popular {{ site.client_label | plural }}</h3>
</div>
<div class="section">
  {% if clients == empty %}
    <p>
      <em>no {{ site.client_label | plural | downcase }} available</em>
    </p>
  {% else %}

    <ol>
      {% for client in clients %}
      <li class="item">
        <a href="{{ client.show_path }}">{{ client.small_avatar }}</a>
        {{ client.link_to_show }}
        <p>{{ site.work_label | downcase | pluralize: client.works_count }}</p>   
      </li>
      {% endfor %}
    </ol>

  {% endif %}

</div>
<style>
  blockquote {
    background: #cccccc;
    padding: 5px 20px 5px 20px;
    margin: 1em 0 0 0;
  }
</style>
<p>{{ activity.title }}</p>
<p>{{ activity.additional_detail_email }}</p>
<p><a href="{{ activity.full_show_path }}">View Activity</a></p>
{% if activity.can_comment? %}
  {% include 'emails/_reply_by_email' %}
{% endif %}
<div id='footer'>
  <p>
    This message sent from <a href="{{site.community_url}}">{{site.community_name}}</a>
  </p>
  {% unless user_settings == nil %}
      <p>
        {% include 'emails/_notification_settings' %}
      </p>
  {% endunless %}
  {{ activity.full_unwatch_link }}
</div>
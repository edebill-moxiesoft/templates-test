<div class="header">
  <h3>Recent {{ site.discussion_label | plural }}</h3>
</div>
<div class="section">
  
  {% if discussions == empty %}
    <p><em>No {{ site.discussion_label | plural | downcase }} available.</em></p>
  {% else %}
  
    <ol>
      {% for discussion in discussions %}
      <li class="item recent">
        <p class="group">{{ discussion.parent.parent.link_to_show }}</p>
        <p class="title">{{ discussion.link_to_show }}</p>
        <p class="updated">by {{ discussion.creator.link_to_show }} {{ discussion.updated_at | time_ago_in_words, 'ago'  }} </p>
      </li>
      {% endfor %}
    </ol>
    {% if more_discussions > 0 %}
      <a class="more_link" href="/discussions?order=recent">{{ more_discussions }} more</a>
    {% endif %}
  
  {% endif %}
  
</div>
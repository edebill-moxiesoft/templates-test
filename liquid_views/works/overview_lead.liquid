<form>
  <input type="hidden" class="works_index_url" value="{{index_url}}">
  <input type="hidden" class="works_limit" value="{{limit}}">
  <input type="hidden" class="works_template" value="works/overview_lead">
  <div class="updated_at">Updated {{ works.first.updated_at | time_ago_in_words }}</div>

</form>
<ol class="works leads item_list js_filter_body">
  {% if works == empty %}
  <li><p><em>No projects yet.</em></p></li>
  {% else %}
  {% for work in works %}
  <li class="item work">
    <p>{{ work.link_to_owner }} added</p>

      <p class="work_body">
        <a href="{{ work.show_path }}" class="project_link">{{ work.title }}</a>
        {{ work.excerpted_body_no_more_link }}
      </p>
      {% if work.tags_list != empty %}
      <p>Tagged as: <span class='tags'>{{ work.tags_list }}</span></p>
      {% endif %}
    <!--em>
      Client: {{work.parent.title }} | Type: {{ work.work_type }} | Lead Status: {{ work.lead_status }} | Start Date: {{ work.start_date }} |
      End Date: {{ work.end_date }} | Location: {{ work.location }} | Updated: {{ work.updated_at }} | Created: {{ work.created_at }}
    </em-->
  </li>
  {% endfor %}
  {% endif %}

</ol>
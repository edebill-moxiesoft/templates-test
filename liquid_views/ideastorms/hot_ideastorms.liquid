<div class="header">
  <h3>Hot {{ site.ideastorm_label | plural }}</h3>
</div>
<div class="section">
  
  {% if ideastorms == empty %}
    <p>
      <em>no {{ site.ideastorm_label | downcase | plural }} available</em>
    </p>
  {% else %}
  
    <ol>
      {% for ideastorm in ideastorms %}
      <li class="item hot">        
        <div class="idea_count"><var>{{ 'idea' | pluralize: ideastorm.ideas_count, 'ideas' }}</var></div>
        <div class="idea">
          {{ ideastorm.link_to_show }}
          <p class="updated">
            updated {{ ideastorm.updated_at | time_ago_in_words, 'ago' }}
          </p>
        </div>
      </li>
      {% endfor %}
    </ol>
    {% if more_ideastorms > 0 %}
      <a href="/ideastorms?order=hot" class="more_link">{{ more_ideastorms }} more</a>
    {% endif %}
  
  {% endif %}
  
</div>
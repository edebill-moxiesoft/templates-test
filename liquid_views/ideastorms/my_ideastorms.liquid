<div class="header">
  <h3>My {{ site.ideastorm_label | plural }}</h3>
</div>
<div class="section">
  
  {% if ideastorms == empty %}
    <p>
      <em>no {{ site.ideastorm_label | plural | downcase }} available</em>
    </p>
  {% else %}
  
    <ol>
      {% for ideastorm in ideastorms %}
      <li class="item">        
        <div class="idea_count"><var>{{ 'idea' | pluralize: ideastorm.ideas_count, 'ideas' }}</var></div>
        <div class="idea">
          {{ ideastorm.link_to_show_with_container_class }}
          <p class="updated">
            updated {{ ideastorm.updated_at | time_ago_in_words, 'ago' }}
          </p>
        </div>
      </li>
      {% endfor %}
    </ol>
    {% if more_ideastorms > 0%}
      <a class="more_link" href="/ideastorms?order=my">{{ more_ideastorms }} more active</a>
    {% endif %}
  
  {% endif %}
  
</div>